        var num = 10;//数字型
        var PI = 3.14;//数字型
        //八进制 0-7 数字前面加0 表示八进制
        var num1 = 013;
        console.log(num1);//八进制转换为十进制 就是11
        //十六进制 0-9 a-f 数字的前面加 0x表示十六进制
        var num2 = 0x9;
        console.log(num2);
        //数字的最大和最小
        console.log(Number.MAX_VALUE);
        console.log(Number.MIN_VALUE);
        //无穷大
        console.log(Number.MAX_VALUE*2);
        //无穷小
        console.log(-Number.MIN_VALUE*2);
    </script>

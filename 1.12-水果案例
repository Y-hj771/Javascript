    <script>
        var fruit = prompt('请输入你要查询的水果');
        switch(fruit){
            case '苹果':
                alert('苹果是3.5一斤');
                break;
            case '香蕉':
                alert('香蕉是5一斤');
                break;
            case '芒果':
                alert('芒果是8一斤');
                break;
            default:
                alert('没有查到这种水果');        
        }
    </script>

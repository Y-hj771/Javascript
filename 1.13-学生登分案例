<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        var num = prompt('请输入有几个学生');
        var sum = 0;
        for(var i=1;i<=num;i++){
            var score = prompt('请输入第'+i+'个学生的分数');
            sum += Number(score);
        }
        alert('学生们的总分是'+sum);
        alert('学生们的平均分是'+sum/num);
           
    </script>
</head>

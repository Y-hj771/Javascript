    <title>Document</title>
    <script>
        function getRandom(min, max){
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }
        var random = getRandom(1,10);
        while(1)
        {
            var num = prompt('你来猜一下数字');
            if(num > random)
            {
                alert('你猜的有点大');
            }else if(num < random){
                alert('你猜的有点小');
            }else{
                alert('你猜对了');
                break;
            }
            
        }
    </script>
</head>

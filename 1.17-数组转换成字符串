    <script>
        //用toString()
        var arr = [1,2,3];
        console.log(arr.toString());//1,2,3
        //用分隔符join(分隔符)
        var arr1 = ['red','blue','yellow'];
        console.log(arr1.join());//red,blue,yellow
        console.log(arr1.join('-'));//red-blue-yellow
    </script>
